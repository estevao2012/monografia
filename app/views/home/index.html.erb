<div class="fade-loading"><div><h1>Carregando Rodovias</h1></div></div>
<div id="map" class="map"></div>
<div id="information" class="information"></div>
<div class="about"><div></div></div>
<div class="search"><div>
	<%= render 'search' %>
</div></div>
<script>
	var count = <%= @locals.count %>;
	<% @locals.each do |single| %>
	$.get('/get_geom_by_br/<%= single.br %>', function(object, index){
	  var item = createVector("#<%= random_color %>", object, "<%= single.id %>");
	  if(item !== undefined)
	  	map.addLayer(item);

	  count--;
	  if(count == 0)
	  	$(".fade-loading").hide();
	})
	<% end %>
</script>